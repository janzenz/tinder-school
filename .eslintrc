{
  "parser"  : "babel-eslint",
  "extends" : [
    "eslint:recommended",
    "standard-react"
  ],
  "plugins": [
    "babel"
  ],
  "env"     : {
    "browser" : true,
    "node" : true,
    "es6": true
  },
  "globals" : {
    "__DEV__"      : false,
    "__PROD_GOODLAB__": false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__COVERAGE__" : false,
    "__BASENAME__" : false,
    "__GOODWALL_CONFIGURATION__": false
  },
  "rules": {
    semi: [1, "always"],
    "no-unused-vars": [2, {"args": "after-used"}],
    "valid-jsdoc": 2,
    "max-len": [2, 120, 2],
    "generator-star-spacing": 0,
    "babel/generator-star-spacing": 1,
    "no-var": 2,
    "react/jsx-boolean-value": 0,
    "quotes": [2, "single", {"avoidEscape": true, "allowTemplateLiterals": true}]
  }
}
